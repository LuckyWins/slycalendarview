<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SlyCalendarDialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>


    <style name="SlyCalendarTimeDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/slycalendar_defHeaderColor</item>
        <item name="colorControlNormal">@color/slycalendar_defHeaderColor</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="SlyCalendarViewMonthChangeButtons">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="SlyCalendarViewBottomButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/slycalendar_defTextColor</item>
    </style>
</resources>